{
  "name": "Hate Shield",
  "version": "0.0.1",
  "description": "A simple extension to block hate speech on the internet",
  "manifest_version": 3,
  "background":{
    "service_worker": "serviceWorker.js"
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["scripting", "storage"],
  "options_ui":{
    "page": "opt.html"
  },
  "icons": {
    "16": "favicon.png"
  },
  "action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html"
  }

}